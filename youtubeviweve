      background-repeat: no-repeat;
    }

    .button-open {
      position: fixed;
      top: 20px;
      left: 20px;
      width: 20px;
      height: 20px;
      background-color: rgba(255, 255, 255, 0.3);
      border: none;
      border-radius: 50%;
      cursor: pointer;
      box-shadow: 0 1px 4px rgba(0,0,0,0.4);
    }

    .button-open:hover {
      background-color: rgba(255, 255, 255, 0.5);
    }

    .video-wrapper {
      position: absolute;
      top: 100px;
      left: 20px;
      width: 320px;
      height: 180px;
      resize: both;
      overflow: hidden;
      background-color: black;
      border: 2px solid white;
      border-radius: 8px;
      z-index: 1000;
    }

    .video-header {
      background: #222;
      color: white;
